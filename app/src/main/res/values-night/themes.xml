<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShurjoPayAgent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--<item name="android:statusBarColor">@color/statusBar</item>
        <item name="android:windowLightStatusBar">false</item>-->
        <item name="colorPrimary">@color/statusBar</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimaryVariant">@color/toolBar</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ShurjoPayAgent.Splash">
        <item name="colorPrimary">@color/statusBar</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.ShurjoPayAgent.NoActionBar">
        <item name="colorPrimary">@color/statusBar</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ShurjoPayAgent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ShurjoPayAgent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>